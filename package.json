{
  "name": "subtopia-js-sdk",
  "version": "3.0.1-beta.1",
  "description": "Subtopia SDK for JavaScript",
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "info@subtopia.io",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build && cpy package.json README.md dist",
    "test": "vitest run --coverage",
    "lint": "eslint src",
    "format": "eslint src --fix && prettier . --write",
    "docs": "npx typedoc src/index.ts --excludePrivate --excludeExternals --exclude '**/adminClient.ts'",
    "commit": "cz",
    "release": "semantic-release",
    "pre-commit": "bun run format && bun run lint && bun run test && bun run build && bun run docs"
  },
  "peerDependencies": {
    "@algorandfoundation/algokit-utils": "^9.1.0",
    "algosdk": "^3.2.0"
  },
  "devDependencies": {
    "ajv": "^8.5.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.3",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "commitizen": "4.3.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cpy-cli": "^5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "glob": "^11.0.2",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "semantic-release": "24.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "bun run build"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "pkgRoot": "dist"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "branches": [
      {
        "name": "main",
        "prerelease": "beta"
      },
      {
        "name": "release"
      }
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/exec",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "lint-staged": {
    "src/**/**/*.{ts,tsx}": [
      "prettier . --write",
      "git add"
    ]
  }
}
